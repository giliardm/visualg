Algoritmo "CONVERSOR MEDIDAS"

Var
METROS: REAL


Inicio
ESCREVAL ("DIGITE O VALOR EM METROS: ")
 lEIA (METROS)

  ESCREVAL ("RESULTADO DE MT PARA KM: ", METROS/1000)
    ESCREVAL ("RESULTADO DE MT PARA HM: ", METROS/100)
     ESCREVAL ("RESULTADO DE MT PARA DAM: ", METROS/10)
      ESCREVAL ("RESULTADO DE MT PARA DM: ", METROS*10)
         ESCREVAL ("RESULTADO DE MT PARA CM: ", METROS*100)
            ESCREVAL ("RESULTADO DE MT PARA MM: ", METROS*1000)
         
Fimalgoritmo